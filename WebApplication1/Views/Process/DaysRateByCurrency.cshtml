
<div id="affichageDaysRate">
    <div class="col-sm-6">
        <div class="col-sm-9" style="top: 16px;">
            <fieldset class="test-fieldst legent-issue-date" style="border: 1px solid white !important;padding: 1px;">
                <legend class="test-fieldst" style="background-color:transparent">Sales Date Range Selection</legend>
                <table style="border-spacing: 10px;border-collapse: separate;">
                    <tr>
                        <td>Period:</td>
                        <td>
                            <select class="form-control" style="width: 100px" id="valPeriode">
                                <option>-ALL-</option>
                                @for (int i = 0; i < ViewBag.lonItemP; i++)
                                {
                                    <option>@ViewBag.ListeItemPeriod[0, i]</option>
                                }
                            </select>
                            <input type="hidden" name="period" id="period" value="@ViewBag.valPeriod" class="form-control" style="width: 93%;">
                        </td>
                        <td>Country Name</td>
                        <td>
                            <select class="form-control" id="valCountry" onchange="getItemCurrency()">
                                <option>-ALL-</option>
                                @for (int i = 0; i < ViewBag.lonItemCou; i++)
                                {
                                    <option value="@ViewBag.ListeItemCou[0, i]" data-value="@ViewBag.ListeItemCou[1, i]">@ViewBag.ListeItemCou[0, i]</option>
                                }
                            </select>
                            <input type="hidden" name="country" id="country" value="@ViewBag.valCountry" class="form-control" style="width: 93%;">
                        </td>
                        <td>Currency</td>
                        <td>
                            <select class="form-control" style="width: 100px" id="valCurrency">
                                <option>-ALL-</option>
                                @for (int i = 0; i < ViewBag.lonItemCur; i++)
                                {
                                    <option>@ViewBag.ListeItemCur[0, i]</option>
                                }
                            </select>
                            <input type="hidden" name="currency" id="currency" value="@ViewBag.valCurrency" class="form-control" style="width: 93%;">
                        </td>
                    </tr>
                </table>
            </fieldset>
        </div>

        <div class="col-sm-1" style="top: 48px;">
            <button class="btn btn-default" onclick="searchDaysRateByCurrency()">SEARCH</button>
        </div>
    </div>
    <div class="col-sm-10 n-padding" style="top: 28px;background-color: white;height: 550px;left: 22px;overflow: auto;">
        <table id="TableDaysRate" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="pink">Period</th>
                    <th class="pink">Country Code</th>
                    <th class="pink">Country Name</th>
                    <th class="pink">Currency</th>
                    <th class="pink">USD Rate</th>
                    <th class="pink">GBP Rate</th>
                    <th class="pink">EUR Rate</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < ViewBag.nombreDR; i++)
                {
                    <tr>
                        @for (int j = 0; j < 7; j++)
                        {
                            <td>@ViewBag.resultatDr[j, i]</td>;
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-12" style="top: 79px;left: 6px;">
        <div class="form-group row width-group">
            <div class="col-sm-2" style="float: right;">
                <input type="hidden" name="nbDR" id="nbDR" value="@ViewBag.nombreDR" class="form-control" style="width: 93%;">
                <button class="btn btn-default" type="button" onclick="closeNetshull('nutshell9')">CLOSE TAB</button>
            </div>
        </div>
    </div>

</div>