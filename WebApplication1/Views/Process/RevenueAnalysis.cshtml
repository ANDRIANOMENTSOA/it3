
<script src="~/Scripts/Process.js"></script>

<div id="revenuAnalysis">
    <div class="col-sm-11 tab-content tab-cancellation">
        <!--  Load Ajax  --->
        <div class="ajax-loader">
            <img src="@Url.Content("~/Images/load.gif")" class="img-responsive" />
        </div>

        <!--  End Load Ajax  --->
         <div id="search" class="tab-pane fade in active">
            <div class="content col-sm-12">
                <div class="row">
                    <div class="col-lg-4">
                        <fieldset class="test-fieldst">
                            <legend class="test-fieldst">Flight Date</legend>
                            <div class="col-sm-1 margin-issue">
                                <label class="form-check-label col-form-label">From:-</label>
                            </div>

                            <div class="col-sm-3 n-padding">
                                <div class="input-group date">
                                    <input type="text" name="FromRevenueAnalytics" class="form-controls input-date" value="@ViewBag.dateFrom " id="FromRevenueAnalytics" onchange="changeDateRevenue()" />
                                    <span class="input-group-addon datetimepicker" onclick="setdate('FromRevenueAnalytics')">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-sm-1">
                                <label class="form-check-label col-form-label">To:-</label>
                            </div>
                            <div class="col-sm-3 n-padding">
                                <div class="input-group date">
                                    <input type='text' name="ToRevenueAnalytics" class="form-controls input-date input-datetimepicker" value="@ViewBag.dateTo" id="ToRevenueAnalytics" onchange="changeDateRevenue()" />
                                    <span class="input-group-addon datetimepicker" onclick="setdate('ToRevenueAnalytics')">
                                        <span class="glyphicon glyphicon-calendar" id="calendarPaxTo"></span>
                                    </span>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <div class="col-lg-2" style="margin-top:20px">
                        <fieldset class="test-fieldst">
                            <div class="col-lg-4">
                                <label class="form-check-label col-form-label">Flight No</label>
                            </div>
                            <div class="col-lg-8">
                                <select class="form-control" id="Fight" >
                                    <option class="form-control">-All-</option>
                                    @for (int i = 0; i < ViewBag.logFlighNo; i++)
                                    {
                                        <option value="@ViewBag.ItemFlighNo[0, i]">@ViewBag.ItemFlighNo[0, i]</option>
                                    }
                                </select>
                            </div>
                        </fieldset>
                    </div>
                    <!--  <div class="col-lg-1">
                        <label class="form-check-label col-form-label">Display Own <input type="checkbox" checked/></label>
                    </div>
                    <div class="col-lg-1">
                        <label class="form-check-label col-form-label">Display OAL <input type="checkbox" checked/></label>
                    </div> -->

                    <div class="col-lg-2" style="margin-top:20px">
                        <div class="col-lg-4">
                            <button class="btn" onclick="searchRevenuAnalysis()">SEARCH</button>
                            <input type="hidden" name="valnb" id="valnb" value="@ViewBag.logListRevenue" >
                        </div>
                        <div class="col-lg-4">
                            <button class="btn" onclick="clearRevenu()">CLEAR</button>
                        </div>
                        <div class="col-lg-4">
                            <button class="btn" onclick="removeSousMenu()">CLOSE</button>
                        </div>
                    </div>
                </div>
                <div class="row" style="position: relative;top: 13px;">
                    <!--
                        <div class="col-lg-4">
                         <div class="col-lg-3">
                             <label class="form-check-label col-form-label">Pax Final Counts</label>
                         </div>
                         <div class="col-lg-3">
                             <input type="text" class="form-control" readonly>
                         </div>
                         <div class="col-lg-3">
                             <label class="form-check-label col-form-label">Flow Revenue Net</label>
                         </div>
                         <div class="col-lg-3">
                             <input type="text" class="form-control" readonly>
                         </div>
                     </div> -->

                </div>
                <div class="row" style="position: relative; top: 30px;">
                    <div class="col-lg-7">
                        <div class="table-record-display" id="tabnowshow" style="height:707px;overflow:auto; position: relative;">
                            <table id="TableRevenue" class="table table-striped table-bordered  table-outward">
                                <thead>
                                    <tr>
                                        <th>Revenue Type</th>
                                        <th>Document No</th>
                                        <th>Coupon No</th>
                                        <th>Flight No</th>
                                        <th>Flight Date</th>
                                        <th>Orig.</th>
                                        <th>Dest.</th>
                                        <th>Final Share (USD)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < ViewBag.logListRevenue; i++)
                                    {
                                        <tr>
                                            @for (int j = 0; j < 8; j++)
                                            {
                                                <td>@ViewBag.ListeRevenue[j, i]</td>;
                                            }
                                        </tr>
                                    }
                                </tbody>


                            </table>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="table-record-display" id="tabnowshow" style="height:356px;overflow:auto; position: relative;">
                            <table id="TableRevenueType" class="table table-striped table-bordered  table-outward">
                                <thead>
                                    <tr>
                                        <th>Revenue Type</th>
                                        <th>No Of Doc</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < ViewBag.logSummary; i++)
                                    {
                                        <tr>
                                            @for (int j = 0; j < 3; j++)
                                            {
                                                <td>@ViewBag.dgsummary[j, i]</td>;
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
